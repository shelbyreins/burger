<div class="container">
  <div class="jumbotron">
    <h1 class="display-4">Burgers</h1>
    <p class="lead">Order your burger </p>
    <p class="lead">Eat your burger </p>
    <hr class="my-4">
  </div>

<div class="container">
  <div class="row">
    <div class="col-md-6">



      <h2>Burgers Ordered</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{this.id}}-{{this.burger_name}}
          <br>
          <button type="button" class="devour btn btn-dark" data-id="{{this.id}}"
            data-devour="{{devour}}">Devour</button>
        </li>
        <br>

        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2>Burgers Eaten</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{this.id}}- {{this.burger_name}}
        <br>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  </div>
  <h2>Order your burger</h2>


  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" class="form-control" id="burger" name="burger">
  </div>


  <button type="button" id="addBtn">Add Burger</button>


</div>